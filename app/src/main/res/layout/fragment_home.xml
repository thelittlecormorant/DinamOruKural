<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="27dp"
        android:text="Select the notification time"
        app:layout_constraintBottom_toTopOf="@+id/editText"
        app:layout_constraintEnd_toEndOf="@+id/editText" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="219dp"
        android:ems="10"
        android:inputType="time"
        android:text="8:00 AM"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="v"
        app:layout_constraintBottom_toBottomOf="@+id/editText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editText" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Set"
        app:layout_constraintEnd_toEndOf="@+id/editText"
        app:layout_constraintTop_toBottomOf="@+id/editText" />


    <Button
        android:id="@+id/action_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:showAsAction="never"
        android:title="5 seconds"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <Button
        android:id="@+id/action_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:showAsAction="never"
        android:title="10 seconds"
        app:layout_constraintStart_toStartOf="@+id/action_5"
        app:layout_constraintTop_toBottomOf="@+id/action_5" />

    <Button
        android:id="@+id/action_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:showAsAction="never"
        android:title="30 seconds"
        app:layout_constraintStart_toStartOf="@+id/action_10"
        app:layout_constraintTop_toBottomOf="@+id/action_10" />

</androidx.constraintlayout.widget.ConstraintLayout>